@model Company

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id != 0 ? "Update":"Create") Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />

            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input class="form-control border-0 shadow" asp-for="Name" type="text" />
                            <label class="ms-2">Company Name</label>

                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input class="form-control border-0 shadow" asp-for="PhoneNumber" type="text" />
                            <label class="ms-2">Phone Number</label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input class="form-control border-0 shadow" asp-for="StreetAddress" type="text" />
                            <label class="ms-2">Street Address</label>

                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input class="form-control border-0 shadow" asp-for="City" type="text" />
                            <label class="ms-2">City</label>

                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input class="form-control border-0 shadow" asp-for="State" type="text" />
                            <label class="ms-2">State</label>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input class="form-control border-0 shadow" asp-for="PostalCode" type="text" />
                            <label class="ms-2">Postal Code</label>

                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>

                        <div class="row pt-2">

                            @if (Model.Id == 0)
                            {
                                <div class="col-6">
                                    <button type="submit" class="btn btn-dark form-control">Create</button>
                                </div>
                            }
                            else
                            {
                                <div class="col-6">
                                    <button type="submit" class="btn btn-dark form-control">Update</button>
                                </div>
                            }

                            <div class="col-6">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-dark border-1 form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
        </form>
    </div>
</div>

@section Scripts {
    <script>
  tinymce.init({
    selector: 'textarea',
    plugins: 'anchor autolink charmap codesample emoticons lists table visualblocks wordcount checklist mediaembed casechange export formatpainter pageembed linkchecker a11ychecker tinymcespellchecker permanentpen powerpaste advtable advcode editimage advtemplate ai mentions tinycomments tableofcontents footnotes mergetags autocorrect typography inlinecss markdown',
    toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent ',
    tinycomments_mode: 'embedded',
    tinycomments_author: 'Author name',
    mergetags_list: [
      { value: 'First.Name', title: 'First Name' },
      { value: 'Email', title: 'Email' },
    ],
    ai_request: (request, respondWith) => respondWith.string(() => Promise.reject("See docs to implement AI Assistant")),
  });
</script>
}